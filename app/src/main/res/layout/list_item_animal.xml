<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgAnimal"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtBrinco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="CÃ³digo"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgAnimal" />

    <TextView
        android:id="@+id/txtSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="Sexo"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@+id/txtBrinco"
        android:layout_toEndOf="@+id/imgAnimal" />

    <TextView
        android:id="@+id/txtDataNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="00/00/0000"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@+id/txtSexo"
        android:layout_toEndOf="@+id/imgAnimal" />

    <TextView
        android:id="@+id/txtPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0Kg"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@+id/txtDataNascimento"
        android:layout_toEndOf="@+id/imgAnimal" />
</RelativeLayout>